<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.digital4.sql.mapper.InventoryMapper">
 			<!--상품 등록시 inventory table에 재고 저장. 기본 수량은 0-->
            <insert id="insertInventory" parameterType="long"> 
				INSERT INTO Inventory (productId, quantity) 
				VALUES (#{productId}, 0) 
			</insert>
			
			<!--상품 이름으로 재고검색 inventory 찾아오기-->
			 <select id="getInventory" resultType="com.digital4.sql.vo.InventoryVO"> 
                     SELECT i.productId, i.quantity
                     FROM 	product p, inventory i
                     WHERE	p.productName = #{productName}     
                     		and p.productId = i.productId 
           	</select>
           	
           	<!--상품 id으로 재고검색 inventory 찾아오기-->
			 <select id="getInventoryById" resultType="com.digital4.sql.vo.InventoryVO"> 
                     SELECT i.productId, i.quantity
                     FROM 	inventory i
                     WHERE	i.productId = #{productId}
           	</select>
           	
           	<!--상품 재고 수량 변경-->
           	 <update id="updateQuantity" parameterType="com.digital4.sql.vo.InventoryVO">
    				UPDATE Inventory
    				SET
      					quantity = #{quantity}
   					WHERE productId = #{productId}

  			</update>
</mapper>